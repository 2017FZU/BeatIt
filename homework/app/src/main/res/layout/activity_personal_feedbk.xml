<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/hw_black">

        <ImageView
            android:id="@+id/btn_personal_feedbk_return"
            android:layout_width="@dimen/hw_img_length_normal"
            android:layout_height="@dimen/hw_img_length_normal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/text_course_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="意见反馈"
            android:textColor="#ffffff" />

    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_feed_bk_txt_border">
        
        <EditText
            android:id="@+id/edit_feedbk_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="31dp"
            android:background="@null"/>
        
    </LinearLayout>

    <Button
        android:id="@+id/btn_feedbk_submit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_feed_bk_send_button"
        android:text="提交"/>

</LinearLayout>