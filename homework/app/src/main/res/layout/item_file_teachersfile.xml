<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clipToPadding="true"
    android:background="@drawable/icon_filelist_file_border">

    <ImageView
        android:id="@+id/img_teachersfile_type"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#DDDDDD"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_teachersfile_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/text_teachersfile_isdownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/img_teachersfile_isdownload"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="#ffffff"/>
    </LinearLayout>

</LinearLayout>