<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hw_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_gravity="center_horizontal"
        android:text="作业来啦"
        android:textSize="45dp"
        android:textColor="#232323"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:text="HOMEWORK"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_login_userphone"
            android:layout_width="211dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_rectangle_round_login_input"
            android:gravity="center"
            android:hint="手机号"
            android:maxLines="1"
            android:textCursorDrawable="@color/colorPrimary" />

        <EditText
            android:id="@+id/text_login_passwords"
            android:layout_width="211dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_rectangle_round_login_input"
            android:gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:textCursorDrawable="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_login_confirm"
            android:layout_width="211dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/background_rectangle_round_login"
            android:text="登入"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/btn_login_register"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="注册账号"/>
        <View
            android:layout_width="49dp"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/btn_login_forgetpassword"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:text=" 忘记密码"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_login_tree"/>

</LinearLayout>